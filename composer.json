{
    "name": "gelembjuk/auth",
    "description": "PHP Package for easy login to a web site with popular social networks. Now supports login with Facebook, Google, Twitter, LinkedIn.",
    "keywords": [
        "social login",
        "facebook",
	"google",
	"twitter",
	"linkedin"
    ],
    "require": {
	"facebook/graph-sdk":"*",
	"abraham/twitteroauth":"*",
	"google/apiclient":"1.*",
	"linkedinapi/linkedin":"1.*",
	"league/oauth1-client": "1.*",
	"firebase/php-jwt":"*",
        "gelembjuk/logger": "1.*"
    },
    "require-dev":{},
    "license": "MIT",
    "authors": [
        {
            "name": "Roman Gelembjuk",
            "email": "roman@gelembjuk.com"
        }
    ],
    "autoload": {
        "psr-0": { "Gelembjuk":"src/" }
    },
    "minimum-stability": "stable"
}
